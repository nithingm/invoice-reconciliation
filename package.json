{
  "name": "transmission-portal",
  "version": "1.0.0",
  "description": "Modern portal for automobile transmission remanufacturing company with AI-powered chat support",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\" \"npm run python-ai\"",
    "dev:ai-only": "concurrently \"npm run server\" \"npm run python-ai\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "python-ai": "cd python_microservice && python start_ai_service.py",
    "python-ai:win": "cd python_microservice && start_ai_service.bat",
    "python-ai:unix": "cd python_microservice && chmod +x start_ai_service.sh && ./start_ai_service.sh",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install && cd python_microservice && pip install -r requirements.txt",
    "install:python": "cd python_microservice && pip install -r requirements.txt",
    "start": "node server/index.js",
    "start:with-ai": "concurrently \"npm start\" \"npm run python-ai\"",
    "test:gemini": "cd tests && node test-gemini.js",
    "test:gemini-litellm": "cd tests && node test-gemini-litellm.js"
  },
  "keywords": [
    "transmission",
    "remanufacturing",
    "portal",
    "chat",
    "AI"
  ],
  "author": "Transmission Remanufacturing Company",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.5.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "litellm": "^0.12.0",
    "ollama": "^0.5.16",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.8.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1"
  }
}
